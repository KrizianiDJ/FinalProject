<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.krizianidj.capstone1.AddingBarcodes">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            app:srcCompat="@mipmap/applogo"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="0dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help FridgeBuddy's Barcode Database grow!"
            android:textAlignment="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="Scan Barcode"
            android:id="@+id/scanbtn"/>

        <EditText
            android:id="@+id/editTextBarcode"
            android:layout_margin="8dp"
            android:inputType="text"
            android:hint="Enter item's barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_margin="8dp"
            android:inputType="text"
            android:hint="Enter item's name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_margin="8dp"
            android:inputType="text"
            android:hint="Enter product's description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextCategories"
            android:layout_margin="8dp"
            android:inputType="text"
            android:hint="Enter the categories (separate by coma)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextBrand"
            android:layout_margin="8dp"
            android:inputType="text"
            android:hint="Enter the brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonAdd"
            android:text="Add Product"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="45dp" />





    </LinearLayout>

        <ProgressBar
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/progressbarProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
